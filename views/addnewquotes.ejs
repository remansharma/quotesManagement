<div class="container my-4">
    <form action="/addnewquotes" method="POST">
      <%- include(  "./partials/messages") %>
        <h1>Add a New Quote</h1>

        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">Quote</span>
          </div>
          <textarea rows="10" name="quote" class="form-control" required placeholder="Write your quote here" aria-label="With textarea"></textarea>
        </div>

        <div class="input-group mb-3 my-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Author</span>
          </div>
          <input name="author" type="text" class="form-control" required placeholder="Name here" aria-label="Username" aria-describedby="basic-addon1">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
      </form>

</div>